<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="send_whatsapp_msg_lead_source_view_form" model="ir.ui.view">
        <field name="name">whatsapp.msg.lead.source.form</field>
        <field name="model">whatsapp.msg.lead.source</field>
        <field name="arch" type="xml">
            <form string="Send a WhatsApp Message">
                <sheet>
                    <group>
                        <field name="message" style="height='400px';"/>
                    </group>
                    <group col="4">
                        <field name="attachment_ids" widget="many2many_binary" string="Attach a file" nolabel="1" colspan="2"/>
                    </group>
                </sheet>
                <footer>
                    <group>
                        <span>
                            <button string="Send" type="object" class="oe_highlight" name="action_send_msg_marketing"/>
                            <button string="Cancel" class="oe_link" special="cancel" />
                        </span>
                    </group>
                </footer>
            </form>
        </field>
    </record>

    <record id="send_whatsapp_msg_lead_source_form_action" model="ir.actions.act_window">
        <field name="name">Send WhatsApp Message</field>
        <field name="res_model">whatsapp.msg.lead.source</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="domain"></field>
        <field name="context">{
            'search_default_team_id':[active_model],
            'search_default_team_id': [active_id]
            }</field>
    </record>

</odoo>
