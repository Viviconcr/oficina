<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record id="crm_lead_form_inherite" model="ir.ui.view">
            <field name="name">crm.lead.form.inherited</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_set_lost']" position="after">
                    <button type="action"
                                name="%(pragtech_whatsapp_lead_source.send_whatsapp_msg_lead_source_form_action)d"
                                class="fa fa-whatsapp"
                                string="Send Whatsapp Message"
                        />
                </xpath>
                <xpath expr="//field[@name='team_id']" position="after">
                     <field name="chat_id" readonly="1" force_save="1"/>
                </xpath>
            </field>
         </record>
    </data>
</odoo>
