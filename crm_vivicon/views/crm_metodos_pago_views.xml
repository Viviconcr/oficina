<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="crm_metodos_pago_tree_view" model="ir.ui.view">
            <field name="name">crm.metodos.pago.tree</field>
            <field name="model">crm.metodos.pago</field>
            <field name="arch" type="xml">
                <tree string="Métodos de pago" editable="bottom">
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!--    Actions -->

        <record id="action_crm_metodos_pago" model="ir.actions.act_window">
            <field name="name">Métodos de pago</field>
            <field name="res_model">crm.metodos.pago</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'active_test': False}</field>
        </record>

    </data>
</odoo>