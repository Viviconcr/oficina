<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="crm_production_lot_inherit_tree_view" model="ir.ui.view">
            <field name="name">crm_stock.production.lot.inherit_tree.view</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_tree"/>
            <field name="arch" type="xml">
                <field name="product_id" position="after">
                    <field name="x_area_lote" />
                    <field name="x_area_construcion" />
                    <field name="x_folio_real" optional="hide"/>
                    <field name="x_numero_plano" optional="hide"/>
                </field>
            </field>
        </record>
        
        <record id="crm_stock_production_lot_inherit_form_view" model="ir.ui.view">
            <field name="name">crm_view.stock.production.lot.form.inherit</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='main_group']/group" position="after">
                    <group>
                        <field name="x_area_lote" />
                        <field name="x_area_construcion" />
                        <field name="x_folio_real" />
                        <field name="x_numero_plano" />
                    </group>
                </xpath>
<!--                 <field name="company_id" position="before">
                    <label for="x_area_lote" string="Área Lote" />
                    <div name="areas" class="o_row">
                        <field name="x_area_lote" />
                        <span>   Área construcción </span>
                        <field name="x_area_construcion"/>
                    </div>
                    <field name="x_folio_real" />
                    <field name="x_numero_plano" />
                </field> -->
            </field>
        </record>
    </data>
</odoo>
