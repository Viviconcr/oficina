<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="xutm_campaign_tree_view_inherit" model="ir.ui.view">
        <field name="name">xutm_campaign_tree_view_inherit</field>
        <field name="model">utm.campaign</field>
        <field name="inherit_id" ref="utm.utm_campaign_view_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="whatsapp_account_id"/>
            </field>
        </field>
    </record>

    <record id="xutm_campaign_form_view_inherit" model="ir.ui.view">
        <field name="name">xutm_campaign_form_view_inherit</field>
        <field name="model">utm.campaign</field>
        <field name="inherit_id" ref="utm.utm_campaign_view_form"/>
        <field name="arch" type="xml">
            <field name="tag_ids" position="after">
                <field name="whatsapp_account_id" options="{'no_create': True, 'no_open': True}"/>
            </field>
        </field>
    </record>
</odoo>