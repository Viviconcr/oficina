<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="xcrm_projects_filter" model="ir.ui.view">
            <field name="name">crm.xprojects.search</field>
            <field name="model">xcrm.projects</field>
            <field name="arch" type="xml">
                <search string="Projects">
                    <field name="code"/>
                    <field name="name"/>
                    <separator/>
                    <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
                </search>                
            </field>
        </record>

        <record id="xprojects_view_tree" model="ir.ui.view">
            <field name="name">crm.xprojects.view.tree</field>
            <field name="model">xcrm.projects</field>
            <field name="arch" type="xml">
                <tree string="Proyectos" editable="bottom">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="whatsapp_account_id" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}"/>
                    <field name="active" widget="boolean_toggle" />
                </tree>
            </field>
        </record>

        <!--    Actions -->

        <record id="action_xcrm_projects" model="ir.actions.act_window">
            <field name="name">Proyectos</field>
            <field name="res_model">xcrm.projects</field>
            <field name="view_mode">tree</field>
            
        </record>
    </data>
</odoo>